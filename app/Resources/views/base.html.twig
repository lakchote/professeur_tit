    <div id="modal-load" class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="modal-load-desktop">
        </div>
    </div>
</div>
<!-- /END Modal Desktop -->

<!-- START Modal Mobile -->
<div class="modal fade" id="modal-login-mobile" tabindex="-1" role="dialog" aria-labelled-by="#modal-label-mobile">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="modal-load-mobile">
        </div>
    </div>
</div>
<!-- /END Modal Mobile -->


