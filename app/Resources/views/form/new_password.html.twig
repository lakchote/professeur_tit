{% extends 'base.html.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            {{ form_start(form, {
                'attr' : {'class' : 'form-horizontal'}
            }) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first, {
                'label' : 'Votre nouveau mot de passe'
            }) }}
            {{ form_row(form.plainPassword.second, {
                'label' : 'Confirmation'
            }) }}
            {{ form_row(form.resetPassword) }}
            <button type="submit" class="btn btn-lg btn-primary pull-right" formnovalidate>Valider</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}