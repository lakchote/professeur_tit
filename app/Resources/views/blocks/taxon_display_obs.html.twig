{% set run = 0 %}
    {% for obs in taxon.observations if obs.status =="validated" and run < 1 %}
        {% set run = 1 %}
                <img class="search__details--icon" src="{{ asset(obs.imgPath ~ obs.image.filename) }}"
                     alt="Observation"
                     id="obs__photo">
        {% else %}
                <img class="search__details--icon" src="{{ asset('assets/img/tit_logo.png') }}"
                     alt="Observation"
                     id="obs__photo">
    {% endfor %}
